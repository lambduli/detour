--                         --  The base case.  We don't write the 'ℕ(n) ==>' part as it's obvious.
--                         { ∃ n₃ : ℕ(n₃) ∧ Sum( Zero , n₂ , n₃ ) } ==>
--                         --  The inductive case.
--                         [ ∀ n : { ℕ(n) ==> ∃ n₃ : ℕ(n₃) ∧ Sum( n , n₂ , n₃ ) } ==> { ℕ(n) ==> ∃ n₃ : ℕ(n₃) ∧ Sum( Suc(n) , n₂ , n₃ ) } ] ==>
--                         { ∀ n₁ : ℕ(n₁) ==> ∃ n₃ : ℕ(n₃) ∧ Sum( n₁ , n₂ , n₃ ) }


-- theorem totality : ∀ n₁ n₂ : ℕ(n₁) ==> ℕ(n₂) ==> ∃ n₃ : ℕ(n₃) ∧ Sum( n₁ , n₂ , n₃ )
