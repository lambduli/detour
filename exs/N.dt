-- |       |       |       |       |------------------------------------------------------
-- |       |       |       |       |
-- |       |       |       |       | --  Let's prove the base case: ∃ n₃ : ℕ(n₃) ∧ Sum( Z , n₂ , n₃ )
-- |       |       |       |       |
-- |       |       |       |       | sum-n=>z  : ℕ(n₂) ==> Sum(Zero , n₂ , n3)  by rule ∀-elim on sum-zero
-- |       |       |       |       | sum-z     : Sum(Zero , n₂ , n3)  by rule ==>-elim on sum-n=>z, p2
-- |       |       |       |       |
-- |       |       |       |       | n3∧s     : ℕ(n3) ∧ Sum( Zero , n₂ , n3 )  by rule ∧-intro on p2, sum-z
-- |       |       |       |       |
-- |       |       |       |       | base      : ∃ n₃ : { ℕ(n₃) ∧ Sum( Zero , n₂ , n₃ ) }  by rule ∃-intro on n3∧s
-- |       |       |       |       |
-- |       |       |       |       |
-- |       |       |       |       | --  Let's prove the inductive case: ∀ n : [ ℕ(n) ==> ∃ n₃ : ℕ(n₃) ==> Sum( n , n₂ , n₃ ) ] ==> [ ℕ(n) ==> ∃ n₃ : ℕ(n₃) ==> Sum( Suc(n) , n₂ , n₃ ) ]
-- |       |       |       |       |
-- |       |       |       |       | n : | for any n
-- |       |       |       |       |     |------------------------------------------------
-- |       |       |       |       |     |
-- |       |       |       |       |     | n=>n+1 :  | p3 : ℕ(n) ==> ∃ b : ℕ(b) ==> Sum( n , n₂ , b )
-- |       |       |       |       |     |           |------------------------------------
-- |       |       |       |       |     |           |
-- |       |       |       |       |     |           | N : | p4 : ℕ(n)
-- |       |       |       |       |     |           |     |----------------------------
-- |       |       |       |       |     |           |     |
-- |       |       |       |       |     |           |     | exn₃ : ∃ c : ℕ(c) ==> Sum( n , n₂ , c )  by rule ==>-elim on p3, p4
-- |       |       |       |       |     |           |     |
-- |       |       |       |       |     |           |     | s₃ :  | p5 : ℕ(n₃) ==> Sum( n , n₂ , n₃ )  for some n₃
-- |       |       |       |       |     |           |     |       |------------------------------------------
-- |       |       |       |       |     |           |     |       |
-- |       |       |       |       |     |           |     |       | d0 : ℕ(n) ==> ℕ(n₂) ==> ℕ(n₃) ==> Sum( n , n₂ , n₃ ) ==> Sum( Suc(n) , n₂ , Suc(n₃) )  by rule ∀-elim on sum-suc
-- |       |       |       |       |     |           |     |       | d1 : ℕ(n₃) ==> Sum( n , n₂ , n₃ ) ==> Sum( Suc(n) , n₂ , Suc(n₃) )  by rule ==>-elim on d0, p4, p2
-- |       |       |       |       |     |           |     |       |
-- |       |       |       |       |     |           |     |       | N₃ :  | p6 : ℕ(n₃)
-- |       |       |       |       |     |           |     |       |       |------------------------------------
-- |       |       |       |       |     |           |     |       |       |
-- |       |       |       |       |     |           |     |       |       | d4 : Sum( n , n₂ , n₃ )  by rule ==>-elim on p5, p6
-- |       |       |       |       |     |           |     |       |       | r1 : Sum( Suc(n) , n₂ , Suc(n₃) )  by rule ==>-elim on d1, p6, d4
-- |       |       |       |       |     |           |     |       |
-- |       |       |       |       |     |           |     |       | d5 : ℕ(Suc(n₃)) ==> Sum( Suc(n) , n₂ , Suc(n₃) )  by unproved -- rule ==>-intro on N₃
-- |       |       |       |       |     |           |     |       | r2 : ∃ a : ℕ(a) ==> Sum( Suc(n) , n₂ , a )  by rule ∃-intro on d5
-- |       |       |       |       |     |           |     |
-- |       |       |       |       |     |           |     | r3 : ∃ n₃ : ℕ(n₃) ==> Sum( Suc(n) , n₂ , n₃ )  by rule ∃-elim on exn₃ , s₃
-- |       |       |       |       |     |           |
-- |       |       |       |       |     |           | r4 : ℕ(n) ==> ∃ n₃ : ℕ(n₃) ==> Sum( Suc(n) , n₂ , n₃ )  by rule ==>-intro on N
-- |       |       |       |       |     |
-- |       |       |       |       |     | r5 : [ ℕ(n) ==> ∃ n₃ : ℕ(n₃) ==> Sum( n , n₂ , n₃ ) ] ==> [ ℕ(n) ==> ∃ n₃ : ℕ(n₃) ==> Sum( Suc(n) , n₂ , n₃ ) ]  by rule ==>-intro on n=>n+1
-- |       |       |       |       |
-- |       |       |       |       | step : ∀ n : [ ℕ(n) ==> ∃ n₃ : ℕ(n₃) ==> Sum( n , n₂ , n₃ ) ] ==> [ ℕ(n) ==> ∃ n₃ : ℕ(n₃) ==> Sum( Suc(n) , n₂ , n₃ ) ]  by rule ∀-intro on n
-- |       |       |       |       |
-- |       |       |       |       | ind0 : ℕ(n₂) ==> { ∃ n₃ : ℕ(n₃) ==> Sum( Zero , n₂ , n₃ ) } ==> [ ∀ n : { ℕ(n) ==> ∃ n₃ : ℕ(n₃) ==> Sum( n , n₂ , n₃ ) } ==> { ℕ(n) ==> ∃ n₃ : ℕ(n₃) ==> Sum( Suc(n) , n₂ , n₃ ) } ] ==> { ∀ n₁ : ℕ(n₁) ==> ∃ n₃ : ℕ(n₃) ==> Sum( n₁ , n₂ , n₃ ) }  by rule ∀-elim on ind-sum
-- |       |       |       |       |
-- |       |       |       |       | ind1 : { ∃ n₃ : ℕ(n₃) ==> Sum( Zero , n₂ , n₃ ) } ==> [ ∀ n : { ℕ(n) ==> ∃ n₃ : ℕ(n₃) ==> Sum( n , n₂ , n₃ ) } ==> { ℕ(n) ==> ∃ n₃ : ℕ(n₃) ==> Sum( Suc(n) , n₂ , n₃ ) } ] ==> { ∀ n₁ : ℕ(n₁) ==> ∃ n₃ : ℕ(n₃) ==> Sum( n₁ , n₂ , n₃ ) }  by rule ==>-elim on ind0, p2
-- |       |       |       |       |
-- |       |       |       |       | ind2 : [ ∀ n : { ℕ(n) ==> ∃ n₃ : ℕ(n₃) ==> Sum( n , n₂ , n₃ ) } ==> { ℕ(n) ==> ∃ n₃ : ℕ(n₃) ==> Sum( Suc(n) , n₂ , n₃ ) } ] ==> { ∀ n₁ : ℕ(n₁) ==> ∃ n₃ : ℕ(n₃) ==> Sum( n₁ , n₂ , n₃ ) }  by rule ==>-elim on ind1, base
-- |       |       |       |       |
-- |       |       |       |       | ind3 : ∀ n₁ : { ℕ(n₁) ==> ∃ n₃ : ℕ(n₃) ==> Sum( n₁ , n₂ , n₃ ) }  by rule ==>-elim on ind2, step
-- |       |       |       |       |
-- |       |       |       |       | ind4 : ℕ(n₁) ==> ∃ n₃ : ℕ(n₃) ==> Sum( n₁ , n₂ , n₃ )  by rule ∀-elim on ind3
-- |       |       |       |       |
-- |       |       |       |       | r6 : ∃ n₃ : ℕ(n₃) ==> Sum( n₁ , n₂ , n₃ )  by rule ==>-elim on ind4, p1
-- |       |       |       |
-- |       |       |       | r7 : ℕ(n₂) ==> ∃ n₃ : ℕ(n₃) ==> Sum( n₁ , n₂ , n₃ )  by rule ==>-intro on N₂
-- |       |       |
-- |       |       | r8 : ℕ(n₁) ==> ℕ(n₂) ==> ∃ n₃ : ℕ(n₃) ==> Sum( n₁ , n₂ , n₃ )  by rule ==>-intro on N₁
-- |       |
-- |       | r9 : ∀ n₂ : ℕ(n₁) ==> ℕ(n₂) ==> ∃ n₃ : ℕ(n₃) ==> Sum( n₁ , n₂ , n₃ )  by rule ∀-intro on n₂
